---
const { nomMaison, adresse, nbChambres, nbSdb, prix, surface, imageUrl, id } =
    Astro.props;
---

<ul class="flex justify-center">
    <li
        class="bg-white shadow-lg rounded-xl overflow-hidden transform transition duration-300 hover:scale-105"
    >
        <img
            src={imageUrl}
            alt="image de l'annonce"
            class="w-full h-56 object-cover"
        />
        <div class="p-6">
            <h2 class="text-xl font-bold text-gray-900">{nomMaison}</h2>
            <p class="text-gray-600 mt-1">{adresse}</p>
            <div class="flex justify-between items-center mt-4">
                <p class="text-gray-700 text-sm">{nbChambres} chambres</p>
                <p class="text-gray-700 text-sm">{nbSdb} salles de bain</p>
            </div>
            <div class="flex justify-between items-center mt-4">
                <p class="text-lg font-semibold text-indigo-700">
                    {prix} ‚Ç¨/mois
                </p>
                <p class="text-gray-600 text-sm">{surface} m¬≤</p>
            </div>

            <div x-data="{ favori: false }" class="mt-6 flex flex-col gap-3">
                <button
                    @click="favori = !favori"
                    class="w-full py-2 px-4 rounded-lg font-medium text-white transition-all duration-300"
                    :class="favori ? 'bg-red-500 hover:bg-red-600' : 'bg-gray-300 hover:bg-gray-400'"
                >
                    <span x-show="!favori">üíñ Ajouter aux favoris</span>
                    <span x-show="favori">‚ùå Retirer des favoris</span>
                </button>
                <a
                    href={`/offres/${id}`}
                    class="w-full text-center py-2 px-4 rounded-lg font-medium bg-indigo-600 text-white hover:bg-indigo-700 transition-all duration-300"
                >
                    Voir plus
                </a>
            </div>
        </div>
    </li>
</ul>
