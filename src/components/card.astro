---
const { adresse, favori, nbChambres, nbSdb, nomMaison, prix, surface, imgUrl } =
    Astro.props;
---

<div class="flex items-center justify-center min-h-screen bg-gray-100">
    <div class="max-w-sm bg-white rounded-lg shadow-md overflow-hidden gap-4">
        <img src={imgUrl} alt={nomMaison} class="w-full h-48 object-cover" />
        <div class="p-4">
            <h2 class="text-xl font-semibold text-gray-800">{nomMaison}</h2>
            <p class="text-gray-600">{adresse}</p>
            <div class="flex items-center justify-between mt-4">
                <p class="text-lg font-bold text-gray-800">${prix}/mo</p>
                <p class="text-sm text-gray-500">{surface} m²</p>
            </div>
            <div class="mt-2 text-sm text-gray-500">
                <p>{nbChambres} Chambres • {nbSdb} Salles de bain</p>
            </div>
            <button
                class={`mt-4 w-full py-2 px-4 rounded ${
                    favori
                        ? "bg-red-500 text-white"
                        : "bg-gray-200 text-gray-700"
                }`}
            >
                {favori ? "En Favoris" : "Ajouter aux Favoris"}
            </button>
        </div>
    </div>
</div>
