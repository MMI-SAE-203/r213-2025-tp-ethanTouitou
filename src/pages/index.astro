---
import Header from "../components/Header.astro";
import Base from "../layouts/Base.astro";
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<meta name="generator" content={Astro.generator} />
		<title>Accueil | MonSite</title>
		<link
			rel="stylesheet"
			href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css"
		/>
	</head>
	<body class="bg-gray-100 text-gray-800">
		<Base titre="Accueil">
			<!-- Hero Section -->
			<section
				class="bg-gradient-to-r from-blue-600 to-indigo-600 text-white py-20"
			>
				<div class="container mx-auto px-4 text-center">
					<h1 class="text-4xl md:text-5xl font-bold mb-4">
						Bienvenue sur MonSite !
					</h1>
					<p class="text-lg md:text-xl mb-6">
						Explorez nos offres, découvrez nos services, et
						laissez-vous inspirer.
					</p>
					<a
						href="/offres"
						class="bg-white text-blue-600 font-bold py-3 px-6 rounded-full shadow-md hover:bg-gray-100"
					>
						Nos Offres
					</a>
				</div>
			</section>

			<!-- Content Section -->
			<section class="py-12">
				<div class="container mx-auto px-4">
					<h2 class="text-3xl font-bold mb-6 text-center">
						Nos Services
					</h2>
					<div class="grid grid-cols-1 md:grid-cols-3 gap-8">
						<div
							class="bg-white shadow-lg rounded-lg p-6 text-center"
						>
							<h3 class="text-xl font-bold mb-4">Service 1</h3>
							<p>
								Découvrez comment notre premier service peut
								vous aider à réussir vos projets.
							</p>
						</div>
						<div
							class="bg-white shadow-lg rounded-lg p-6 text-center"
						>
							<h3 class="text-xl font-bold mb-4">Service 2</h3>
							<p>
								Profitez d'un accompagnement personnalisé avec
								notre second service.
							</p>
						</div>
						<div
							class="bg-white shadow-lg rounded-lg p-6 text-center"
						>
							<h3 class="text-xl font-bold mb-4">Service 3</h3>
							<p>
								Nos experts sont là pour répondre à tous vos
								besoins techniques.
							</p>
						</div>
					</div>
				</div>
			</section>

			<!-- Call to Action -->
			<section class="bg-blue-600 text-white py-12">
				<div class="container mx-auto px-4 text-center">
					<h2 class="text-3xl font-bold mb-4">Prêt à commencer ?</h2>
					<p class="mb-6">
						Rejoignez-nous dès aujourd'hui et transformez vos idées
						en réalité.
					</p>
					<a
						href="/contact"
						class="bg-white text-blue-600 font-bold py-3 px-6 rounded-full shadow-md hover:bg-gray-100"
					>
						Contactez-nous
					</a>
				</div>
			</section>
		</Base>
	</body>
</html>
